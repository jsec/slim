{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "dependencyDashboard": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "patch/minor dependencies",
      "groupSlug": "non-major-deps"
    },
    {
      "matchPackagePatterns": ["@typescript-eslint/", "^eslint"],
      "groupName": "eslint dependencies",
      "groupSlug": "eslint"
    },
    {
      "matchPackageNames": ["ts-node", "typescript"],
      "groupName": "typescript dependencies",
      "groupSlug": "typescript"
    },
    {
      "matchPackageNames": ["mongoose", "typegoose"],
      "groupName": "database dependencies",
      "groupSlug": "database"
    },
    {
      "matchPackageNames": ["fastify*"],
      "groupName": "api dependencies",
      "groupSlug": "api"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "recreateClosed": true
  },
  "schedule": [
    "every weekend"
  ]
}
