{
  "name": "slim",
  "version": "1.0.0",
  "description": "Simracing League Incident Manager",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "api:run": "tsx ./src/api/index.ts",
    "lint": "eslint --ext .ts . --max-warnings 0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "4.18.0",
    "kysely": "0.26.1",
    "neverthrow": "6.0.0",
    "pg": "8.11.2"
  },
  "devDependencies": {
    "@jarsec/eslint-config": "2.0.0",
    "@jarsec/prettier-config": "1.1.0",
    "@jarsec/tsconfig": "1.0.0",
    "@types/node": "20.4.8",
    "@typescript-eslint/parser": "6.0.0",
    "ava": "^5.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.46.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.1",
    "ts-node": "10.9.1",
    "tsx": "3.12.7",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
