{
  "name": "slim",
  "version": "1.0.0",
  "description": "Simracing League Incident Manager",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "api:run": "tsx ./src/api/index.ts",
    "lint": "eslint --ext .ts . --max-warnings 0",
    "migrate:make": "node -r ts-node/register scripts/migrate.ts create",
    "migrate:latest": "node -r ts-node/register scripts/migrate.ts latest",
    "migrate:down": "node -r ts-node/register scripts/migrate.ts down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fastify": "4.24.3",
    "kysely": "0.26.3",
    "neverthrow": "6.1.0",
    "pg": "8.11.3"
  },
  "devDependencies": {
    "@jarsec/eslint-config": "4.4.0",
    "@jarsec/prettier-config": "2.1.0",
    "@jarsec/tsconfig": "2.0.0",
    "@types/node": "20.10.8",
    "@types/pg": "8.10.9",
    "@typescript-eslint/parser": "6.13.2",
    "ava": "6.1.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.55.0",
    "husky": "9.0.7",
    "kysely-migration-cli": "0.2.3",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": "20.10.0"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  }
}
